generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("postgresql://user:password@db:5432/luminadb")
}

model Chat {
  id        String   @id @default(uuid())
  prompt    String
  response  String
  createdAt DateTime @default(now())
}
